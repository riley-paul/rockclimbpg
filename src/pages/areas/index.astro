---
import Centered from "@/layouts/Centered.astro";
import Layout from "@/layouts/Layout.astro";
import Markdown from "@/layouts/Markdown.astro";
import { getCollection } from "astro:content";

import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import MapImage from "@/components/MapImage.astro";
import AreaCard from "@/components/AreaCard.astro";

const climbingAreas = await getCollection("climbingAreas");
---

<Layout>
  <div class="w-full bg-background shadow px-6 py-2 font-medium text-lg">
    <h1>Climbing Areas</h1>
  </div>
  <Centered>
    <div class="grid gap-4">
      {climbingAreas.map((area) => <AreaCard area={area} />)}
    </div>
  </Centered>
</Layout>
