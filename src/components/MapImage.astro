---
import { cn } from "@/lib/utils";
interface Props {
  latitude: number;
  longitude: number;
  className?: string;
}

const { latitude, longitude, className = "" } = Astro.props;

const center = `${latitude},${longitude}`;
const zoom = "13";
const key = import.meta.env.MAPS_API_KEY;

const src = `https://maps.googleapis.com/maps/api/staticmap?center=${center}&zoom=${zoom}&size=200x200&key=${key}`;
---

<img src={src} alt="location map" class={className} />
