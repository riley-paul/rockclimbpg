---
import Footer from "@/components/Footer.astro";
import { Header } from "@/components/Header.tsx";
import "@/globals.css";

interface Props {
  pageTitle?: string;
}
---

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    return window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light";
  };
  const isDark = getThemePreference() === "dark";
  document.documentElement.classList[isDark ? "add" : "remove"]("dark");

  if (typeof localStorage !== "undefined") {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    });
    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ["class"],
    });
  }
</script>

<html lang="en" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/mountain.svg" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
      integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
      crossorigin=""
    />

    <title>Rock Climb PG - New</title>
  </head>
  <body
    class="flex flex-col dark:bg-[url('/bg/topography.svg')] bg-[url('/bg/topography-light.svg')]"
  >
    <Header client:load pathname={Astro.url.pathname} />
    <main class="flex-1 overflow-auto">
      <div class="container p-4 grid gap-4">
        <slot />
      </div>
      <!-- <Footer /> -->
    </main>
  </body>
</html>
